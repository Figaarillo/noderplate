{
  "name": "boilerplate-api-server-ts",
  "version": "0.0.0",
  "description": "",
  "main": "dist/App.js",
  "scripts": {
    "start": "tsc --noEmit && node dist/server.js",
    "start:dev": "tsc --noEmit && concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "start:test": "NODE_ENV=test pnpm run start:dev",
    "lint": "eslint --ext .ts src",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "lint:fix": "eslint --ext .ts src --fix",
    "ts-check": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky install",
    "pre-check": "pnpm run ts-check && pnpm run prettier && pnpm run lint",
    "pre-commit": "lint-staged"
  },
  "keywords": [],
  "author": "Figarillo",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@types/node": "20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "lint-staged": "15.2.0",
    "nodemon": "3.0.2",
    "prettier": "3.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  }
}
